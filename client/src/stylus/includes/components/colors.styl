.spacer
	height: 100%;
	
.colors-wrap
	height: 100%;
	padding 1rem
	width: 25%;
	box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
	h2
		margin 0 0 1rem
	ul
		list-style: none;
		text-align: start;
		padding 0
		li
			cursor: pointer;
			padding: 6px 0;
			display: flex;
			justify-content: space-between;
			width: 100%;
	form
		border-top 4px solid #e9e9e9
		//margin-top: 60px;
		display: flex;
		flex-direction: column;
		padding-top 1em
		legend
			//padding-left: 40px;
			font-weight: bold;
			text-align: left;
			//text-decoration: underline;
			margin-bottom: 16px;
		label
			display: flex;
			justify-content: space-between;
			padding: 4px 0 4px;
		input
			//width: 150px;
			width 100%
		input[type="color"]
			display block
			height 47px
		.button-row
			margin-top 1rem

