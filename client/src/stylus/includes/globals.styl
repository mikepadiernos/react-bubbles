*
	font-family 'Roboto', sans-serif

h1
	font-family 'Roboto Slab', serif
	//margin-bottom 2rem
	//margin-top 0
	
p
	font-size 1.25rem

input, button, textarea, &.button
	border 4px solid #0c72bf
	border-radius 0
	box-sizing border-box
	font-size 1.25rem
	margin-right 5px
	padding 0.5rem
	width auto
	//margin-bottom 8px
	&:last-child
		margin-right 0
	@media screen and (min-width 1001px)
		width auto

input, textarea
	background-color #f0f0f0
	border-radius 0
	outline 0
	width 100%
	&:focus
		background-color white
		border-color green

button, &.button
	background-color #0c72bf
	color white
	&:hover
		background-color #808080
		border-color #808080
	&:focus
		background-color green
		border 4px solid green
		border-radius 0
		color #fff
		outline 0
	&.button-clear
		&:focus
			background-color red
			border-color red